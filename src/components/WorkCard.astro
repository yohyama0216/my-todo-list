---
interface Props {
  title: string;
  description: string;
  image?: string;
  link: string;
  tags?: string[];
}

const { title, description, image, link, tags = [] } = Astro.props;
---

<article class="work-card card">
  {image && (
    <div class="work-image">
      <img src={image} alt={title} loading="lazy" />
    </div>
  )}
  <div class="work-content">
    <h3>{title}</h3>
    <p>{description}</p>
    {tags.length > 0 && (
      <div class="work-tags">
        {tags.map(tag => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    )}
    <a href={link} class="work-link">詳細を見る →</a>
  </div>
</article>

<style>
  .work-card {
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .work-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
    border-radius: 0.5rem 0.5rem 0 0;
    margin: calc(-1 * var(--spacing-md));
    margin-bottom: var(--spacing-sm);
  }

  .work-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .work-card:hover .work-image img {
    transform: scale(1.05);
  }

  .work-content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .work-content h3 {
    margin-bottom: 0.5rem;
  }

  .work-content p {
    flex: 1;
    color: var(--text-gray);
    margin-bottom: 1rem;
  }

  .work-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .tag {
    background-color: var(--bg-light);
    color: var(--text-dark);
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.875rem;
  }

  .work-link {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s;
  }

  .work-link:hover {
    color: var(--primary-hover);
  }
</style>
